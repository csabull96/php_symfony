{# templates/RecipeTemplates/list.html.twig #}

{% extends 'base.html.twig' %}
{% block title %}Recipes{% endblock %}
{% block body %}
    <a class="btn btn-primary ml-4 mt-4" href="{{ path('rbForm') }}">Create recipe</a>
    <a class="btn btn-primary ml-4 mt-4" href="{{ path('rbListIngredients') }}">Add new ingredient</a>
    {% for recipe in recipes %}
        <div class="card m-4" style="border: 1px solid green">
            <div class="card-body">
                <h5 class="card-title">{{ recipe.name }}</h5>
                {% for ingredient in recipe.ingredients %}
                    <p>{{ ingredient.ingredient }}: {{ ingredient.quantity }}</p>
                {% endfor %}
                <p>{{ recipe.description }}</p>
            </div>
        </div>
    {% endfor %}
    {{ dump(recipes) }}
{% endblock %}

