{% extends 'base.html.twig' %}

{% block title %}Vote System{% endblock %}

{% block body %}
    {% form_theme form "form_table_layout.html.twig"%}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    {# @var \App\Entity\Question[] questions #}
    {% for question in questions %}
        <p>
            <a href="{{ path('listChoicesAction', { 'questionId' : question.quId() }) }}">{{ question.quText }}</a>
             |
            <a href="{{ path('deleteQuestionAction', { 'id' : question.quId() }) }}">DELETE</a>
        </p>
    {% endfor %}
{% endblock %}